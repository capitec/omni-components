{
  "name": "@capitec/omni-components",
  "version": "0.2.2",
  "description": "Omni Components come with minimal dependencies to reduce the bloat in your project. All web components base off <strong>OmniElement</strong> (Which itself is based off <a href=\"https://lit.dev\"><strong>LitElement</strong></a>) and are each available as fully standalone imports.",
  "scripts": {
    "clean": "npx rimraf dist docs",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "build": "npm run compile && npm run docs",
    "compile": "npm run clean && npm run compile:ts",
    "compile:ts": "tsc",
    "bundle": "npm run clean && npm run compile:esm",
    "compile:esm": "node scripts/build.mjs --bundle",
    "prepare": "(node -e \"if (! require('fs').existsSync('./dist')) {process.exit(1)} \" || (echo \"Dist does not exist. Attempting compile\" && npm run compile:ts))",
    "docs": "npx rimraf docs && npm run docs:custom-elements && npm run docs:readme && npm run docs:generate && npm run docs:theme-list && npm run docs:storybook",
    "docs:generate": "npm run docs:elements && readme generate -c \"readme/blueprint.json\" -i \"readme/blueprint.md\"",
    "docs:custom-elements": "npx cem analyze --litelement --globs src/**",
    "docs:storybook": "npx build-storybook --output-dir=docs",
    "docs:theme-list": "node scripts/themes-list.mjs",
    "docs:readme": "npx web-component-analyzer ./src/**/*.{js,ts} --outFiles {dir}/README.md",
    "docs:elements": "node scripts/elements-list.mjs",
    "storybook": "npm run clean && tsc && npm run docs:custom-elements && npm run docs:theme-list && concurrently -k -r \"tsc --build --watch --preserveWatchOutput\" \"npx start-storybook --no-manager-cache --port=6006\"",
    "test": "concurrently -k -r -s first \"npm run storybook\" \"npx wait-on tcp:6006 && test-storybook --verbose --coverage\"",
    "format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "format:check": "prettier --config .prettierrc \"src/**/*.ts\" --check"
  },
  "files": [
    "dist",
    "!dist/**/*.stories.*",
    "!dist/**/*.tests.*",
    "!dist/**/*.test.*",
    "src/**/README.md",
    "src/**/*.ts",
    "src/**/*.js",
    "!src/**/*.stories.*",
    "!src/**/*.tests.*",
    "!src/**/*.test.*"
  ],
  "exports": {
    "./*": "./dist/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/capitec/omni-components.git"
  },
  "keywords": [
    "web components",
    "custom elements",
    "components"
  ],
  "author": "capitec",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/capitec/omni-components/issues"
  },
  "homepage": "https://capitec.github.io/open-source/?repo=Omni-Components",
  "devDependencies": {
    "@appnest/readme": "^1.2.7",
    "@codemirror/lang-css": "^6.0.0",
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@custom-elements-manifest/to-markdown": "^0.1.0",
    "@etchteam/storybook-addon-css-variables-theme": "^1.2.1",
    "@innofake/jsdoc-api-debuggable": "^7.1.1",
    "@innofake/storybook-addon-cssprops": "^2.3.6",
    "@storybook/addon-a11y": "^6.5.9",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-coverage": "^0.0.2",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-storysource": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.12",
    "@storybook/jest": "^0.0.10",
    "@storybook/manager-webpack5": "^6.5.12",
    "@storybook/test-runner": "^0.5.0",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/theming": "^6.5.9",
    "@storybook/web-components": "^6.5.9",
    "@types/jest": "^27.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@uiw/codemirror-theme-github": "^4.12.3",
    "@uiw/react-codemirror": "^4.12.3",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "chalk": "^5.0.1",
    "command-line-args": "^5.2.1",
    "concurrently": "^7.2.2",
    "esbuild": "^0.15.7",
    "eslint": "^8.22.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-lit": "^1.6.1",
    "fs-extra": "^10.1.0",
    "globby": "^13.1.2",
    "jest": "^27.0.0",
    "jest-github-actions-reporter": "^1.0.3",
    "jest-playwright-preset": "^1.5.1",
    "jsdoc-parse": "^6.1.0",
    "package-json": "^8.1.0",
    "prettier": "^2.7.1",
    "pretty": "^2.0.0",
    "react-textarea-autosize": "^8.3.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2",
    "wait-on": "^6.0.1",
    "web-component-analyzer": "^1.1.6",
    "webpack": "^5.74.0"
  },
  "dependencies": {
    "lit": "^2.3.1"
  },
  "resolutions": {
    "@storybook/web-components/webpack": "^5"
  },
  "customElements": "custom-elements.json"
}
